<script>
    const list = <% - JSON.stringify(list) %>;
    //  console.log(coordinates);
</script>

<body>
    <% layout('/layouts/boilerplate.ejs') %>
        <div class="container w-100">
            <div class="row">
                <div class="col-9 offset-3">
                    <h2 class="mb-3">
                        <%= list.title %>
                    </h2>
                    <div class="card list-card" style="width: 25rem;">
                        <img src="<%= list.image.url %>" style="height: 15rem;" class="card-img-top"
                            alt="<%=list.image.filename %>">

                        <div class="card-body">
                            <p>Owned By: <b>
                                    <%= list.owner.username %>
                                </b></p>
                            <p class="card-text"><b>
                                    <%=list.description %>
                                        <br />
                                        <%=list.price %>
                                            <br />
                                            <%= list.location%>
                                                <br />
                                                <%= list.country%>

                            </p>
                        </div>
                    </div>
                </div>
            </div>

            <% if(currentUser && (currentUser._id.equals(list.owner._id))) { %>
                <div class="show-btns offset-1">
                    <a href="/listing/<%=list._id %>/edit" class="me-4"><button class="btn btn-primary">Edit the
                            list</button></a>

                    <form method="post" action="/listing/<%=list._id %>?_method=DELETE"
                        onsubmit="return confirm('Are you sure you wanna delete?');">
                        <button class="btn btn-danger">Delete the list</button>
                    </form>
                </div>
                <% } %>

                    <% if(currentUser) { %>
                        <div class="mt-5 offset-3">
                            <h3 class="border-2">Leave Your Review:</h3>

                            <form method="post" action="/listing/<%= list._id %>/reviews" class="mt-4 needs-validation"
                                novalidate>

                                <div class="mt-3">
                                    <label for="rating" class="form-label">
                                        Give your rating:
                                    </label>
                                    <fieldset class="starability-slot">

                                        <input type="radio" id="no-rate" class="input-no-rate" name="reviews[rating]"
                                            value="1" checked aria-label="No rating." />
                                        <input type="radio" id="first-rate1" name="reviews[rating]" value="1" />
                                        <label for="first-rate1" title="Terrible">1 star</label>
                                        <input type="radio" id="first-rate2" name="reviews[rating]" value="2" />
                                        <label for="first-rate2" title="Not good">2 stars</label>
                                        <input type="radio" id="first-rate3" name="reviews[rating]" value="3" />
                                        <label for="first-rate3" title="Average">3 stars</label>
                                        <input type="radio" id="first-rate4" name="reviews[rating]" value="4" />
                                        <label for="first-rate4" title="Very good">4 stars</label>
                                        <input type="radio" id="first-rate5" name="reviews[rating]" value="5" />
                                        <label for="first-rate5" title="Excellent">5 stars</label>

                                    </fieldset>
                                </div>

                                <div class="mt-3">
                                    <label for="comment" class="form-label">
                                        Give your review:
                                    </label>
                                    <textarea name="reviews[comment]" id="comment" class="form-control" required>

                        </textarea>
                                    <div class="invalid-feedback">
                                        Please enter the review!
                                    </div>
                                </div>

                                <button type="submit" class="btn btn-outline-danger mt-4">Submit</button>
                            </form>
                        </div>
                        <% } %>

                            <hr />
                            <% if(list.reviews.length> 0) {%>
                                <div class="container-fluid m-5">
                                    <h2 class="text-center "><b>All Reviews</b></h2>

                                    <div class="row mt-5 mb-5">
                                        <% for(let review of list.reviews) {%>
                                            <div class="card col-lg-5 col-sm-12">
                                                <div class="card-body">
                                                    <h5 class="card-title"><b>
                                                            @<%= review.author.username %>
                                                        </b></h5>
                                                    <p class="starability-result card-text"
                                                        data-rating="<%= review.rating %>">
                                                        <%= review.rating %>Stars
                                                    </p>
                                                    <p class="card-text">
                                                        <%= review.comment %>
                                                    </p>


                                                    <% if(currentUser && currentUser._id.equals(review.author._id)) {%>
                                                        <form method="post"
                                                            action="/listing/<%=list._id %>/reviews/<%= review._id %>?_method=DELETE">
                                                            <button class="btn btn-outline-danger">Delete</button>
                                                        </form>
                                                        <% } %>
                                                </div>
                                            </div>
                                            <% } %>
                                    </div>
                                </div>
                                <% } %>

                                    <div class="map-container col-6 offset-3">
                                        <h2>Where you'll be!</h2>
                                        <div id="map"></div>
                                    </div>

        </div>

        <script src="/map.js"></script>
</body>